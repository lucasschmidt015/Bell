<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/form.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>
    <form class="central_form" action="/bell_beat" method="POST">
        <select name="reason">
            <option value="123">Select a reason</option>
            <% for (reason of reasons) { %>
                <option value="<%= reason._id %>"><%= reason.name %></option>
            <% } %>
        </select>
        <input type="text" name="description" placeholder="Type a description">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <button type="submit">Submit</button>
    </form>

<%- include('../includes/end.ejs') %>
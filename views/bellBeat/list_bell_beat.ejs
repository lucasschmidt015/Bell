<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/table.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>
    <div class="table_container">
        <table class="main_table">
            <tr>
                <th style="width: 31%;">Reason</th>
                <th style="width: 38%;">Description</th>
                <th style="width: 8%; text-align: center;margin-left: 349px;">#</th>
            </tr>
            <% for (let bell_beat of bellBeats) { %>
                <tr>
                    <td style="width: 31%;" ><%= bell_beat.reasonId.name %></td>
                    <td style="width: 38%;" ><%= bell_beat.description %></td>
                    <td style="width: 8%; margin-left: 349px;">
                        <div class="buttons_conteiner">
                            <form action="/call_edit_bell_beat" method="POST">
                                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                <input type="hidden" name="bell_beat_id" value="<%= bell_beat._id %>">
                                <button style="color: #FFF; background-color: blue;" class="table_btn" type="submit">Editar</button>
                            </form>
                            <form action="/delete_bell_beat" method="POST">
                                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                <input type="hidden" name="bell_beat_id" value="<%= bell_beat._id %>">
                                <button style="color: #FFF; background-color: red;" class="table_btn" type="submit">Excluir</button>
                            </form>
                        </div>
                    </td>
                </tr>
            <% } %>
        </table>
    </div>

<%- include('../includes/end.ejs') %>